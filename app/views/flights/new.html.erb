<%= form_for @flight do |f| %>
  <% if @flight.errors.any? %>
    <% @flight.errors.full_messages.each do |message|  %>
      <%= message %>
    <% end %>
  <% end %>

  <%= f.label :airplane_id, 'Airplane' %>
  <%= f.collection_select(:airplane_id, Airplane.all, :id, :plane_information) %>

  <%= f.label :destination_id, 'Destination' %>
  <%= f.collection_select(:destination_id, Destination.all, :id, :location) %>

  <%= f.label :departure_date, "Departure Date" %>
  <%= f.date_field :departure_date %>

  <%= f.submit %>

<% end %>
