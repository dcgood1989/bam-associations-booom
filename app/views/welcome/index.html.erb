<h1>Please register below</h1>

<%= form_for @user, html: {class: 'sign-up-form'} do |f| %>
  <%= f.label :email %>
  <%= f.email_field :email %>
  <br />

  <%= f.label :password %>
  <%= f.password_field :password %>
  <br />

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>
  <br />

  <%= f.submit 'Sign up' %>
<% end %>
